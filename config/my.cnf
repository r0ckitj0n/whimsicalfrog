# WhimsicalFrog ‑ Local MySQL Configuration (macOS)
# Copy to ~/my.cnf or /usr/local/etc/my.cnf and restart MySQL.
# Tuned for local development – safe, lightweight defaults.

[client]
user = root
password =
port = 3306
socket = /tmp/mysql.sock

[mysqld]
# Basic Settings
user = _mysql
port = 3306
socket = /tmp/mysql.sock
basedir = /usr/local/mysql
# Adjust if your data directory lives elsewhere
# For Homebrew installs this is typically /usr/local/var/mysql
# For native pkg installs: /usr/local/mysql/data
# macOS default Homebrew path:
datadir = /usr/local/var/mysql

# Character Set / Collation
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci

# InnoDB
innodb_file_per_table = 1
innodb_buffer_pool_size = 256M
innodb_log_file_size = 64M

# Connection Limits
max_connections = 50

# Slow Query Logging (optional)
slow_query_log = 1
slow_query_log_file = /usr/local/var/mysql/slow-query.log
long_query_time = 1

# Secure File Priv disabled for local dev uploads/exports
secure-file-priv = ""

# Error Log
log_error = /usr/local/var/mysql/error.log

# General Log (comment out to disable noisy query log)
# general_log = 1
# general_log_file = /usr/local/var/mysql/general.log

# Disable DNS lookups for speed
skip_name_resolve = 1

# SQL Mode – loosen up for dev to match production flexibility
sql_mode = STRICT_TRANS_TABLES,ERROR_FOR_DIVISION_BY_ZERO,NO_ENGINE_SUBSTITUTION
# Relax password policy for local development
validate_password.policy = LOW
validate_password.length = 8
validate_password.check_user_name = OFF

[mysqldump]
quick
max_allowed_packet = 64M

[mysql]
no_auto_rehash
prompt = "[WF-Mac] \u@\h (\d)> "

[myisamchk]
key_buffer_size = 16M
