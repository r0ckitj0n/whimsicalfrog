/* Orders Filter Form */
.filter-form-orders {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem;
    background-color: var(--filter-bg, #f8fafc);
    border-radius: var(--filter-border-radius, 0.5rem);
    margin-bottom: 1.5rem;
    border: 1px solid var(--filter-border-color, #e2e8f0);
}

.filter-form-orders .filter-group {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    min-width: 0;
}

.filter-form-orders .filter-label {
    color: var(--filter-label-color, #87ac3a);
    font-weight: var(--filter-label-font-weight, 600);
    font-size: var(--filter-label-font-size, 0.875rem);
    white-space: nowrap;
    min-width: fit-content;
}

.filter-form-orders .filter-input, 
.filter-form-orders .filter-select {
    border: 1px solid var(--form-border-color, #d1d5db);
    border-radius: var(--form-border-radius, 0.375rem);
    padding: var(--form-padding, 0.375rem 0.75rem);
    font-size: var(--form-font-size, 0.875rem);
    background-color: var(--form-bg, white);
    min-width: 120px;
    transition: border-color 0.2s ease, box-shadow 0.2s ease;
}

.filter-form-orders .filter-input:focus, 
.filter-form-orders .filter-select:focus {
    outline: none;
    border-color: var(--form-focus-border, #87ac3a);
    box-shadow: 0 0 0 1px var(--form-focus-border, #87ac3a);
}

.filter-form-orders .filter-clear-link {
    color: var(--link-color, #87ac3a);
    text-decoration: underline;
    font-size: 0.875rem;
    font-weight: 500;
    transition: color 0.2s ease;
}

.filter-form-orders .filter-clear-link:hover {
    color: var(--link-hover-color, #6b8e23);
}

/* Orders Table */
.orders-table {
    width: 100%;
    border-collapse: separate;
    border-spacing: 0;
    margin-bottom: 1.5rem;
    border-radius: var(--table-border-radius, 0.5rem);
    overflow: hidden;
    box-shadow: var(--table-shadow, 0 1px 3px rgb(0 0 0 / 10%));
}

.orders-table th {
    background-color: var(--table-header-bg, #87ac3a);
    color: var(--table-header-text, white);
    padding: 0.75rem 1rem;
    text-align: left;
    font-weight: var(--table-header-font-weight, 600);
    font-size: var(--table-header-font-size, 0.875rem);
    position: sticky;
    top: 0;
    z-index: 10;
    border-bottom: 2px solid var(--table-header-border, #6b8e23);
}

.orders-table th:first-child {
    border-top-left-radius: var(--table-border-radius, 0.5rem);
}

.orders-table th:last-child {
    border-top-right-radius: var(--table-border-radius, 0.5rem);
}

.orders-table td {
    padding: 0.75rem 1rem;
    border-bottom: 1px solid var(--table-border, #e2e8f0);
    vertical-align: middle;
    font-size: var(--table-font-size, 0.875rem);
    background-color: white;
}

.orders-table tr:hover td {
    background-color: var(--table-row-hover, #f7fafc);
