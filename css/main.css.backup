/* ==============================================
   MODAL SYSTEM CSS
   ============================================== */

/*
 * Generic Modal Styles
 * Provides a base for all modal types.
 */

/* Modal overlay */
.modal-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: var(--z-modal);
}

/* Modal content */
.modal-content {
    background-color: #fff;
    padding: 2rem;
    border-radius: var(--modal-border-radius, 8px);
    max-width: var(--modal-max-width, 500px);
    width: 90%;
}

/*
 * Room Modal Styles
 * Specific styles for modals containing room iframes.
 */

.modal-room-page {
    width: 100%;
    height: 100%;
    position: relative;
    overflow: visible; /* Allow background overflow */
    background: transparent;
    z-index: var(--z-base); /* Background layer */
    transform-origin: top center;
}

.room-modal-iframe-container {
    width: 100%;
    height: 100%;
    position: relative;
    overflow: hidden;
    background-size: cover; /* Fully fill container */
    background-position: center;
    background-repeat: no-repeat;
    z-index: var(--z-base); /* Background layer */
}

.room-modal-content-wrapper {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: var(--z-content-overlay);
}

/*
 * Item Popup Styles
 * For displaying product details in a popup.
 */

.item-popup {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgb(0 0 0 / 80%);
    z-index: var(--z-modal);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 20px;
}

.popup-content {
    background: white;
    border-radius: 12px;
    padding: 24px;
    max-width: 500px;
    width: 100%;
    position: relative;
    box-shadow: 0 20px 40px rgb(0 0 0 / 30%);
}

.popup-close {
    position: absolute;
    top: 12px;
    right: 12px;
    background: none;
    border: none;
    font-size: 24px;
    cursor: pointer;
    color: #666;
    line-height: 1;
    padding: 4px;
}

.popup-close:hover {
    color: #000;
}

.popup-body {
    display: flex;
    gap: 20px;
    align-items: flex-start;
}

.popup-image {
    width: 150px;
    height: 150px;
    object-fit: contain;
    border-radius: 8px;
    flex-shrink: 0;
}

.popup-details {
    flex: 1;
}

.popup-title {
    font-size: 1.25rem;
    font-weight: bold;
    margin: 0 0 8px;
    color: #333;
}

.popup-description {
    font-size: 0.9rem;
    color: #666;
    margin: 0 0 12px;
    line-height: 1.4;
}

.popup-price {
    font-size: 1.1rem;
    font-weight: bold;
    color: var(--brand-primary, #87ac3a);
    margin: 0 0 16px;
}

.popup-add-to-cart-btn {
    background: var(--brand-primary, #87ac3a);
    color: white;
    border: none;
    padding: 10px 20px;
    border-radius: 6px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s ease;
    width: 100%;
}

.popup-add-to-cart-btn:hover {
    background: var(--brand-primary-hover, #6b8e23);
    transform: translateY(-1px);
}

.popup-add-to-cart-btn:active {
    transform: translateY(0);
}

@media (max-width: 768px) {
    /* Popups */
    .popup-content {
        max-width: 90%;
        padding: 16px;
    }
    
    .popup-body {
        flex-direction: column;
        gap: 16px;
    }
    
    .popup-image {
        width: 100%;
        height: 200px;
    }

    /* General Layout */
    .page-content-container,
