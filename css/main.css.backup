/* Global Modal and Confirmation Dialog Styles */

/* ==============================================
   MODAL OVERLAY SYSTEM - Base Classes
   ============================================== */

/* Standard Modal Overlay */
.modal-overlay {
    position: fixed;
    inset: 0;
    background: rgb(0 0 0 / 50%);
    backdrop-filter: blur(4px);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 1;
    visibility: visible;
    transition: all 0.3s ease;
    padding: 20px;
    box-sizing: border-box;
}

.modal-overlay.hidden {
    opacity: 0;
    visibility: hidden;
    pointer-events: none;
}

/* Admin Modal Overlay (for larger admin modals) */
.admin-modal-overlay {
    position: fixed;
    inset: 0;
    background: rgb(0 0 0 / 60%);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 1rem;
    opacity: 1;
    visibility: visible;
    transition: all 0.3s ease;
}

.admin-modal-overlay.hidden {
    opacity: 0;
    visibility: hidden;
    pointer-events: none;
}

/* Full Screen Modal Overlay (for settings modals) */
.fullscreen-modal-overlay {
    position: fixed;
    inset: 0;
    background: rgb(0 0 0 / 50%);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 1;
    visibility: visible;
    transition: all 0.3s ease;
}

.fullscreen-modal-overlay.hidden {
    opacity: 0;
    visibility: hidden;
    pointer-events: none;
}

/* ==============================================
   MODAL CONTENT CONTAINERS
   ============================================== */

/* Standard Modal Content */
.modal-content {
    background: white;
    border-radius: 12px;
    box-shadow: 0 25px 50px -12px rgb(0 0 0 / 25%);
    max-width: 500px;
    width: 90%;
    max-height: 90vh;
    overflow-y: auto;
    padding: 24px;
    transform: scale(1);
    transition: transform 0.3s ease;
}

/* Cart page specific override - remove modal scrolling behavior */
#cartPage .modal-content {
    max-height: none;
    overflow-y: visible;
    max-width: none;
    width: 100%;
    box-shadow: 0 4px 6px -1px rgb(0 0 0 / 10%), 0 2px 4px -1px rgb(0 0 0 / 6%);
}

/* Ensure cart page body doesn't create unnecessary scrollbars */
body:has(#cartPage) {
    overflow-x: hidden;
}

/* Compact Room Modal Content (for room add-to-cart modals) */
.room-modal-content {
    background: white;
    border-radius: 12px;
    box-shadow: 0 25px 50px -12px rgb(0 0 0 / 25%);
    max-width: 650px;
    width: 95%;
    max-height: calc(100vh - 40px);
    min-height: auto;
    overflow-y: auto;
    padding: 24px;
    transform: scale(1);
    transition: transform 0.3s ease;
}

.modal-overlay.hidden .modal-content,
.modal-overlay.hidden .room-modal-content {
    transform: scale(0.95);
}

/* Admin Modal Content (larger, more complex modals) */
.admin-modal-content {
    background: white;
    border-radius: 0.5rem;
    box-shadow: 0 10px 15px -3px rgb(0 0 0 / 10%), 0 4px 6px -2px rgb(0 0 0 / 5%);
    width: 100%;
    max-width: 80rem;
    max-height: calc(100vh - 2rem);
    overflow-y: auto;
    padding: 1.5rem;
    transform: scale(1);
    transition: transform 0.3s ease;

    /* Enhanced scrollbar styling */
    scrollbar-width: thin;
    scrollbar-color: #cbd5e0 #f7fafc;
}

.admin-modal-content::-webkit-scrollbar {
    width: 8px;
}

.admin-modal-content::-webkit-scrollbar-track {
    background: #f7fafc;
    border-radius: 4px;
}

.admin-modal-content::-webkit-scrollbar-thumb {
    background: #cbd5e0;
    border-radius: 4px;
}

.admin-modal-content::-webkit-scrollbar-thumb:hover {
    background: #a0aec0;
}

.admin-modal-overlay.hidden .admin-modal-content {
    transform: scale(0.95);
}

/* Compact Modal Content (for small confirmation dialogs) */
.compact-modal-content {
    background: white;
    border-radius: 8px;
    padding: 1rem;
    width: 100%;
    max-width: 380px;
    box-shadow: 0 4px 6px rgb(0 0 0 / 10%);
    transform: scale(1);
    transition: transform 0.3s ease;
}

.modal-overlay.hidden .compact-modal-content {
    transform: scale(0.95);
}

/* Fullscreen Modal Content (for settings pages) */
.fullscreen-modal-content {
    background: white;
    box-shadow: 0 25px 50px -12px rgb(0 0 0 / 25%);
    width: 100%;
    height: 100%;
    overflow-y: auto;
    transform: scale(1);
    transition: transform 0.3s ease;
}

.fullscreen-modal-overlay.hidden .fullscreen-modal-content {
    transform: scale(0.98);
}

/* ==============================================
   MODAL HEADER COMPONENTS
   ============================================== */

/* 
   MODAL HEADER STYLING NOTES:
   - All modal headers use clean designs without bottom borders
   - Admin modals use green gradient backgrounds for consistency
   - Regular modals use simple white backgrounds
   - No grey border lines at top corners
*/

/* FORCE HIDE ANY HANGING PROGRESS INDICATORS */
.modal-overlay [id*="AutoSaveIndicator"],
.admin-modal-overlay [id*="AutoSaveIndicator"],
.modal-content [class*="auto-save"],
.admin-modal-content [class*="auto-save"],
.modal [class*="saving"],
[class*="modal"] [class*="progress"]:not(.intentional-progress),
[class*="modal"] [class*="loading"]:not(.intentional-loading),
.modal-overlay .loading-spinner:not(.modal-loading-spinner),
.admin-modal-overlay .loading-spinner:not(.modal-loading-spinner) {
    display: none;
    visibility: hidden;
    opacity: 0;
    width: 0;
    height: 0;
    position: absolute;
    left: -9999px;
    top: -9999px;
}

/* OVERRIDE ANY PROGRESS BAR ANIMATIONS IN MODALS */
.modal-overlay [id*="progressBar"]:not(.intentional-progress),
.admin-modal-overlay [id*="progressBar"]:not(.intentional-progress),
.modal-content [class*="progress-bar"]:not(.intentional-progress),
.admin-modal-content [class*="progress-bar"]:not(.intentional-progress) {
    display: none;
    width: 0;
    height: 0;
}

/* REMOVE ANY GREY LINES OR PSEUDO-ELEMENTS THAT MIGHT BE HANGING */
.modal-overlay::before,
.admin-modal-overlay::before,
.modal-content::before,
.admin-modal-content::before {
    display: none;
    content: none;
}

/* CLEAN UP ANY POSITION ABSOLUTE ELEMENTS THAT MIGHT BE HANGING AT TOP-LEFT */
.modal-overlay [style*="position: absolute"][style*="top: 0"]:not(.intentional-overlay),
.admin-modal-overlay [style*="position: absolute"][style*="top: 0"]:not(.intentional-overlay),
.modal-content [style*="position: fixed"][style*="top"]:not(.intentional-overlay),
.admin-modal-content [style*="position: fixed"][style*="top"]:not(.intentional-overlay) {
    display: none;
}

.modal-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
    padding-bottom: 16px;
}

.modal-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: #1f2937;
    margin: 0;
}

.modal-subtitle {
    font-size: 0.875rem;
    color: #6b7280;
    margin: 4px 0 0;
}

.modal-close {
    background: none;
    border: none;
    font-size: var(--modal-close-font-size, 24px);
    color: var(--modal-close-color, #6b7280);
    cursor: pointer;
    padding: 0;
    width: var(--modal-close-size, 30px);
    height: var(--modal-close-size, 30px);
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 6px;
    transition: background-color 0.2s ease, color 0.2s ease;
    position: absolute;
}

/* Position variants based on CSS variable */
.modal-close {
    /* Default to top-right */
    top: var(--modal-close-top, 10px);
    right: var(--modal-close-right, 15px);
}

/* Position-specific classes that can be applied based on -modal-close-position */
.modal-close.position-top-left {
    top: var(--modal-close-top, 10px);
    left: var(--modal-close-left, 15px);
    right: auto;
}

.modal-close.position-top-center {
    top: var(--modal-close-top, 10px);
    left: 50%;
    right: auto;
    transform: translateX(-50%);
}

.modal-close.position-bottom-right {
    top: auto;
    bottom: var(--modal-close-top, 10px);
    right: var(--modal-close-right, 15px);
}

.modal-close.position-bottom-left {
    inset: auto auto var(--modal-close-top, 10px) var(--modal-close-left, 15px);
}

.modal-close:hover {
    background-color: var(--modal-close-bg-hover, #f3f4f6);
    color: var(--modal-close-hover-color, #374151);
}

/* Admin Modal Header (with gradient backgrounds) */
