/* CRITICAL MISSING STANDARD CLASSES CSS - Extracted from backups/standard-classes.css */
/* Standardized gradient classes, layout classes, and container systems */

/* ==============================================
   GRADIENT CLASSES
   ============================================== */

/* Brand color gradient */
.header-gradient-brand {
    background: var(--gradient-header);
}

/* Background gradients */
.bg-gradient-brand-primary {
    background: linear-gradient(135deg, var(--brand-primary) 0%, #6b8e23 100%);
}

.bg-gradient-brand-horizontal {
    background: linear-gradient(to right, var(--brand-primary), var(--brand-light));
}

/* ==============================================
   LAYOUT CLASSES
   ============================================== */

.page-header-container {
    position: relative;
    width: 100%;
    padding: 0;
    margin: 0;
}

.page-content-container {
    width: 100%;
    max-width: var(--breakpoint-lg);
    margin-left: auto;
    margin-right: auto;
    padding: calc(var(--header-height, 80px) + var(--space-4)) var(--space-4) var(--space-8);
}

.fullscreen-container {
    width: 100vw;
    margin-left: calc(50% - 50vw);
    padding: calc(var(--header-height, 80px) + var(--space-4)) 0 var(--space-8);
}

/* Adjust padding for smaller screens where header height is reduced */
@media (max-width: 768px) {
    .page-content-container,
    .fullscreen-container {
        --header-height: 60px;
    }
}
/* CRITICAL MISSING PAGES CSS - Extracted from backups/pages.css */
/* Unified dynamic background CSS and room system styles */

/* ==============================================
   UNIFIED DYNAMIC BACKGROUND CSS
   ============================================== */

.bg-container {
    background-image: var(--dynamic-bg-url);
    background-size: cover;
    background-position: center center;
    background-repeat: no-repeat;
}

/* Fullscreen mode: background covers entire viewport */
.bg-container.mode-fullscreen {
