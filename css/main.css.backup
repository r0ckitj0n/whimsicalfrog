/*
==========================================================================
   CSS Custom Properties (Variables)
   ==========================================================================

   This single `:root` block centralizes all global design tokens, making
   it the single source of truth for colors, typography, spacing, etc.
   This ensures consistency and simplifies theming and maintenance.

*/

:root {
  /* ==========================================================================
     COLORS
     ========================================================================== */
  /* Brand Colors */
  --brand-primary: #87ac3a;
  --brand-secondary: #6b8e23;
  --brand-accent: #9cb244;
  --brand-dark: #4a5d1e;
  --brand-light: #a8c755;

  /* UI Colors */
  --white: #fff;
  --black: #000;
  --gray-50: #f9f9f9;
  --gray-100: #f5f5f5;
  --gray-200: #e5e5e5;
  --gray-300: #d4d4d4;
  --gray-400: #a3a3a3;
  --gray-500: #737373;
  --gray-600: #525252;
  --gray-700: #404040;
  --gray-800: #262626;
  --gray-900: #171717;

  /* Status Colors */
  --success: #22c55e;
  --warning: #f59e0b;
  --error: #ef4444;
  --info: #3b82f6;

  /* ==========================================================================
     TYPOGRAPHY
     ========================================================================== */
  --font-primary: 'Merienda', cursive;
  --font-secondary: 'Inter', sans-serif;
  --font-mono: 'SF Mono', consolas, 'Liberation Mono', menlo, monospace;

  /* Font Sizes */
  --text-xs: 0.75rem;    /* 12px */
  --text-sm: 0.875rem;   /* 14px */
  --text-base: 1rem;     /* 16px */
  --text-lg: 1.125rem;   /* 18px */
  --text-xl: 1.25rem;    /* 20px */
  --text-2xl: 1.5rem;    /* 24px */
  --text-3xl: 1.875rem;  /* 30px */
  --text-4xl: 2.25rem;   /* 36px */

  /* ==========================================================================
     SPACING & SIZING
     ========================================================================== */
  --space-1: 0.25rem;    /* 4px */
  --space-2: 0.5rem;     /* 8px */
  --space-3: 0.75rem;    /* 12px */
  --space-4: 1rem;       /* 16px */
  --space-5: 1.25rem;    /* 20px */
  --space-6: 1.5rem;     /* 24px */
  --space-8: 2rem;       /* 32px */
  --space-10: 2.5rem;    /* 40px */
  --space-12: 3rem;      /* 48px */
  --space-16: 4rem;      /* 64px */
  --space-20: 5rem;      /* 80px */

  /* Layout Breakpoints (for JS usage) */
  --breakpoint-sm: 640px;
  --breakpoint-md: 768px;
  --breakpoint-lg: 1024px;
  --breakpoint-xl: 1280px;
  --breakpoint-2xl: 1536px;

  /* ==========================================================================
     BORDERS & SHADOWS
     ========================================================================== */
  /* Border Radius */
  --radius-sm: 4px;
  --radius-md: 6px;
  --radius-lg: 8px;
  --radius-xl: 12px;
  --radius-2xl: 16px;
  --radius-3xl: 24px;
  --radius-full: 9999px;

  /* Gradients */
  --gradient-header: linear-gradient(180deg, rgba(0, 0, 0, 0.4) 0%, rgba(0, 0, 0, 0.2) 50%, rgba(0, 0, 0, 0.1) 100%);

  /* Shadows */
  --shadow-sm: 0 1px 2px rgb(0 0 0 / 5%);
  --shadow-md: 0 4px 6px rgb(0 0 0 / 10%);
  --shadow-lg: 0 10px 15px rgb(0 0 0 / 10%);
  --shadow-xl: 0 20px 25px rgb(0 0 0 / 10%);
  --shadow-2xl: 0 25px 50px rgb(0 0 0 / 25%);

  /* ==========================================================================
     TRANSITIONS & ANIMATIONS
     ========================================================================== */
  --transition-fast: 0.15s ease;
  --transition-base: 0.2s ease;
  --transition-slow: 0.3s ease;
  --animation-duration-fast: 150ms;
  --animation-duration-base: 200ms;
  --animation-duration-slow: 300ms;
  --animation-easing: cubic-bezier(0.4, 0, 0.2, 1);

  /* Z-index variables now centralized in z-index.css */

  /* ==========================================================================
     COMPONENTS
     ========================================================================== */

  /* Header */
  --header-height: 80px;
  --header-logo-height: 60px;
  --header-padding-y: 0.5rem;
  --header-bg-color: linear-gradient(to bottom, rgb(0 0 0 / 95%), transparent);
  --header-text-color: var(--brand-primary);
  --header-shadow: none;
  --nav-link-color: var(--brand-primary);
  --nav-link-hover-color: var(--brand-light);
  --nav-link-active-color: var(--brand-primary);

  /* Buttons */
  --button-height-sm: 32px;
  --button-height-md: 40px;
  --button-height-lg: 48px;
  --button-padding-sm: 8px 12px;
  --button-padding-md: 10px 16px;
  --button-padding-lg: 12px 20px;
  --button-bg-primary: var(--brand-primary);
  --button-bg-primary-hover: var(--brand-secondary);
  --button-text-primary: var(--white);
  --button-border-radius: var(--radius-lg);

  /* Forms & Inputs */
  --form-input-height: 40px;
  --form-input-padding: 0.5rem 0.75rem;
  --form-input-border-radius: var(--radius-md);
  --form-input-bg: var(--white);
  --form-input-border: 1px solid var(--gray-300);
  --form-input-border-focus: 2px solid var(--brand-primary);
  --form-input-color: var(--gray-700);
  --form-input-placeholder: var(--gray-400);
  --form-label-color: var(--gray-700);
  --form-label-font-weight: 500;
  --form-error-color: var(--error);
  --form-success-color: var(--success);
  --form-select-bg: var(--white);
  --form-select-arrow: url('data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iMTIiIGhlaWdodD0iOCIgdmlld0JveD0iMCAwIDEyIDgiIGZpbGw9Im5vbmUiIHhtbG5zPSJodHRwOi8vd3d3LnczLm9yZy8yMDAwL3N2ZyI+CjxwYXRoIGQ9Ik0xIDFMNiA2TDExIDEiIHN0cm9rZT0iIzZCNzI4MCIgc3Ryb2tlLXdpZHRoPSIyIiBzdHJva2UtbGluZWNhcD0icm91bmQiIHN0cm9rZS1saW5lam9pbj0icm91bmQiLz4KPC9zdmc+Cg==');

  /* Search Bar */
  --search-bar-bg: transparent;
  --search-bar-border: 2px solid var(--brand-primary);
  --search-bar-text-color: var(--brand-primary);
  --search-placeholder-color: rgb(135 172 58 / 70%);

  /* Modals */
  --modal-max-width: 90vw;
  --modal-max-height: 90vh;
  --modal-border-radius: var(--radius-lg);
  --room-modal-border-radius: 32px;

  /* Popups */
  --popup-bg-color: var(--white);
  --popup-border-color: #8B4513;
  --popup-border-width: 3px;
  --popup-border-radius: 15px;
  --popup-shadow: var(--shadow-2xl);
  --popup-padding: 15px;
  --popup-min-width: 280px;
  --popup-max-width: 450px;
  --popup-title-color: #556B2F;
  --popup-title-size: 16px;
  --popup-title-weight: bold;
  --popup-category-color: var(--brand-secondary);
  --popup-category-size: 12px;
  --popup-description-color: #666;
  --popup-description-size: 12px;
  --popup-price-color: var(--brand-secondary);
  --popup-price-size: 18px;

  /* Cards (e.g., Shop Items) */
  --card-bg: var(--white);
  --card-border: 1px solid var(--gray-200);
  --card-border-radius: var(--radius-lg);
  --card-shadow: var(--shadow-sm);
  --card-shadow-hover: var(--shadow-md);
  --card-padding: 1.5rem;
  --card-title-color: var(--gray-900);
  --card-title-size: var(--text-lg);
  --card-text-color: var(--gray-500);
  --card-text-size: var(--text-sm);
  --item-price-color: var(--brand-primary);
  --item-price-size: var(--text-xl);
  --item-price-weight: 700;
  --item-image-border-radius: var(--radius-md);

  /* Footer */
  --footer-bg-color: #2d3748;
  --footer-text-color: var(--white);
  --footer-link-color: var(--brand-primary);
  --footer-link-hover-color: var(--brand-light);
  --footer-border-color: #4a5568;
  --footer-heading-color: var(--brand-primary);
  --footer-copyright-color: #a0aec0;
  --footer-social-icon-color: var(--brand-primary);
  --footer-social-icon-hover: var(--brand-light);
  --footer-padding-top: 40px;
  --footer-padding-bottom: 40px;
  --footer-font-size: 14px;
  --footer-heading-size: 18px;
  --footer-copyright-size: var(--text-xs);
  --footer-divider-style: 1px solid var(--footer-border-color);

  /* Scrollbar */
  --scrollbar-width: 8px;
  --scrollbar-width-thin: 6px;
  --scrollbar-width-thick: 12px;
  --scrollbar-track-color: var(--gray-100);
  --scrollbar-thumb-color: var(--brand-primary);
  --scrollbar-thumb-hover-color: var(--brand-secondary);
  --scrollbar-border-radius: 4px;

  /* Backdrop */
  --backdrop-blur: blur(8px);
  --backdrop-blur-sm: blur(4px);
  --backdrop-blur-lg: blur(16px);

  /* ==========================================================================
     PAGE-SPECIFIC
     ========================================================================== */
  /* Room */
  --room-container-width: 1280px;
  --room-container-height: 896px;
  --room-bg-size: 1280px 896px;

  /* Dynamic Background */
  --dynamic-bg-url: none;

  /* Admin Dashboard */
  --admin-bg-color: #f8fafc;
  --admin-border-color: #e2e8f0;
  --admin-error-bg: #fee2e2;
  --admin-header-bg: #1f2937;
  --admin-header-color: #ffffff;
  --admin-nav-active-bg: #3b82f6;
  --admin-nav-hover-bg: #e5e7eb;
  --admin-sidebar-bg: #ffffff;
  --admin-success-bg: #d1fae5;
  --admin-text-primary: #1f2937;
  --admin-text-secondary: #6b7280;
  --admin-warning-bg: #fef3c7;
}

/* ==========================================================================
   COLOR SCHEME & ACCESSIBILITY OVERRIDES
   ========================================================================== */

/* Dark mode variables */
@media (prefers-color-scheme: dark) {
  :root {
    /* Invert grays */
    --gray-50: #171717;
    --gray-100: #262626;
    --gray-200: #404040;
    --gray-300: #525252;
    --gray-400: #737373;
    --gray-500: #a3a3a3;
    --gray-600: #d4d4d4;
    --gray-700: #e5e5e5;
    --gray-800: #f5f5f5;
    --gray-900: #f9f9f9;

    /* Component-specific dark overrides */
    --card-bg: var(--gray-800);
    --card-border: 1px solid var(--gray-700);
    --card-title-color: var(--gray-100);
    --card-text-color: var(--gray-400);
    --scrollbar-track-color: var(--gray-800);
  }
}

/* Accessibility: Respect user's motion preferences */
@media (prefers-reduced-motion: reduce) {
  :root {
    --transition-fast: none;
    --transition-base: none;
    --transition-slow: none;
    --animation-duration-fast: 1ms; /* Use 1ms to avoid breaking logic that depends on transitionend event */
    --animation-duration-base: 1ms;
    --animation-duration-slow: 1ms;
    --animation-easing: ease;
  }
}

/* ==============================================
   STANDARDIZED CSS CLASSES
   ============================================== */

/* Utility Classes */
.hidden {
    display: none !important;
}

.transition-smooth {
    transition: all var(--transition-base) ease;
}

.rounded-brand {
    border-radius: var(--radius-lg);
}

.shadow-brand {
    box-shadow: var(--shadow-md);
}

.shadow-brand-hover {
    box-shadow: var(--shadow-lg);
}

/* Gradient Classes */

/* ==============================================
   SHOP & PRODUCT STYLES
   ============================================== */

/* Shop Container */
.shop-container {
    padding: 1rem;
}

/* Shop Navigation Area */
.shop-navigation-area {
    position: fixed;
    top: var(--header-height, 80px);
    left: 0;
    right: 0;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    z-index: var(--z-navigation);
    padding: 1rem;
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}

/* Navigation Bar */
.navigation-bar {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: center;
    gap: 1rem;
    max-width: 1200px;
    margin: 0 auto;
}

/* Shop Content Area */
.shop-content-area {
    padding-top: calc(var(--header-height, 80px) + 100px); /* Header + nav space */
    min-height: 100vh;
}

/* Product Grid */
.product-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 1.5rem;
    padding: 2rem 1rem;
    max-width: 1200px;
    margin: 0 auto;
}

/* Individual Product Card */
.product-card {
    border: 1px solid #ddd;
    border-radius: 12px;
    padding: 1.5rem;
    text-align: center;
    background: white;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
}

.product-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
}

.product-card img {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    margin-bottom: 1rem;
}

.product-card h3 {
    margin: 0.5rem 0;
    color: var(--color-text-primary);
    font-size: 1.1rem;
    font-weight: 600;
}

.product-card .price {
    font-weight: bold;
    color: var(--color-brand-primary);
    font-size: 1.2rem;
    margin: 0.5rem 0;
}

/* Room Product Icons */
.room-product-icon {
    /* Default dimensions as fallback only */
    --icon-width: 80px;
    --icon-height: 80px;

    position: absolute;
    cursor: pointer;
    z-index: var(--z-content-overlay);
    transition: all 0.2s ease;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    border: 3px solid white;
    background-color: white;
}

/* Only apply default dimensions if no inline styles are set */
.room-product-icon:not([style*="width"]) {
    width: var(--icon-width);
}

.room-product-icon:not([style*="height"]) {
    height: var(--icon-height);
}

.room-product-icon:hover {
    transform: scale(1.05);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.2);
    z-index: var(--z-content-overlay);
}

.room-product-icon-img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    display: block;
}

.room-product-icon.out-of-stock {
    opacity: 0.6;
    filter: grayscale(50%);
}

.room-product-icon.out-of-stock::after {
    content: 'Out of Stock';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background: rgba(255, 0, 0, 0.9);
    color: white;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    font-size: 10px;
    font-weight: bold;
    text-align: center;
    white-space: nowrap;
}



/* Brand color gradient */
.header-gradient-brand {
    background: var(--gradient-header);
}

/* Background gradients */
.bg-gradient-brand-primary {
    background: linear-gradient(135deg, var(--brand-primary) 0%, #6b8e23 100%);
}

.bg-gradient-brand-horizontal {
    background: linear-gradient(to right, var(--brand-primary), var(--brand-light));
}

/* Layout Classes */

.page-header-container {
    position: relative;
    width: 100%;
    padding: 0;
    margin: 0;
}

.page-content-container {
    width: 100%;
    max-width: var(--breakpoint-lg);
    margin-left: auto;
    margin-right: auto;
    padding: calc(var(--header-height, 80px) + var(--space-4)) var(--space-4) var(--space-8);
}

.fullscreen-container {
    width: 100vw;
    margin-left: calc(50% - 50vw);
    padding: calc(var(--header-height, 80px) + var(--space-4)) 0 var(--space-8);
}

/* Adjust padding for smaller screens where header height is reduced */


/* Overlay Classes */

.overlay-gradient-top {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 60px;
    background: linear-gradient(to bottom, rgb(0 0 0 / 60%), transparent);
    pointer-events: none;
    z-index: var(--z-content-overlay);
}

.overlay-gradient-bottom {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 60px;
    background: linear-gradient(to top, rgb(0 0 0 / 60%), transparent);
    pointer-events: none;
    z-index: var(--z-content-overlay);
}

/* Text Classes */

.text-brand-primary {
    color: var(--brand-primary);
}

.text-brand-secondary {
    color: var(--brand-secondary);
}

.text-shadow-dark {
    text-shadow: 1px 1px 2px rgb(0 0 0 / 70%);
}



/* Utility Classes */

.transition-smooth {
    transition: all var(--transition-base) ease;
}

.rounded-brand {
    border-radius: var(--radius-lg);
}

.shadow-brand {
    box-shadow: var(--shadow-md);
}

.shadow-brand-hover {
    box-shadow: var(--shadow-lg);
}

/* Component Classes */

.btn-brand {
    background-color: var(--button-bg-primary);
    color: var(--button-text-primary);
    border: none;
    border-radius: var(--button-border-radius);
    padding: var(--button-padding);
    font-weight: 500;
    cursor: pointer;
    transition: all var(--transition-base) ease;
}

.btn-brand:hover {
    background-color: var(--button-bg-primary-hover);
    transform: translateY(-1px);
    box-shadow: var(--shadow-md);
}

.card-standard {
    background-color: var(--card-bg);
    border: var(--card-border);
    border-radius: var(--card-border-radius);
    box-shadow: var(--card-shadow);
    padding: var(--card-padding);
    transition: all var(--transition-base) ease;
}

.card-standard:hover {
    box-shadow: var(--card-shadow-hover);
    transform: translateY(-2px);
}

/* ==============================================
   BACKGROUNDS
   ==============================================
   Centralized classes for applying page and element backgrounds.
*/

/* 
  Base properties for all room backgrounds.
  This rule targets any class containing 'room-bg-' to apply common styles,
  keeping the code DRY and avoiding changes to the HTML.
*/
[class*="room-bg-"] {
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
}

/* Individual Background Definitions */
.room-bg-main {
    --bg-webp: url('../images/backgrounds/background_room_main.webp');
    --bg-png: url('../images/backgrounds/background_room_main.png');
    background-image: var(--bg-webp);
}

.room-bg-landing {
    --bg-webp: url('../images/backgrounds/background_home.webp');
    --bg-png: url('../images/backgrounds/background_home.png');
    background-image: var(--bg-webp);
}

.room-bg-room1 {
    --bg-webp: url('../images/backgrounds/background_room1.webp');
    --bg-png: url('../images/backgrounds/background_room1.png');
    background-image: var(--bg-webp);
}

.room-bg-room2 {
    --bg-webp: url('../images/backgrounds/background_room2.webp');
    --bg-png: url('../images/backgrounds/background_room2.png');
    background-image: var(--bg-webp);
}

.room-bg-room3 {
    --bg-webp: url('../images/backgrounds/background_room3.webp');
    --bg-png: url('../images/backgrounds/background_room3.png');
    background-image: var(--bg-webp);
}

.room-bg-room4 {
    --bg-webp: url('../images/backgrounds/background_room4.webp');
    --bg-png: url('../images/backgrounds/background_room4.png');
    background-image: var(--bg-webp);
}

.room-bg-room5 {
    --bg-webp: url('../images/backgrounds/background_room5.webp');
    --bg-png: url('../images/backgrounds/background_room5.png');
    background-image: var(--bg-webp);
}

/* 
  Fallback to PNG images for browsers that do not support WebP.
  This relies on a 'no-webp' class being present on a parent element (e.g., <body>).
*/
.no-webp .room-bg-main { background-image: var(--bg-png); }
.no-webp .room-bg-landing { background-image: var(--bg-png); }
.no-webp .room-bg-room1 { background-image: var(--bg-png); }
.no-webp .room-bg-room2 { background-image: var(--bg-png); }
.no-webp .room-bg-room3 { background-image: var(--bg-png); }
.no-webp .room-bg-room4 { background-image: var(--bg-png); }
.no-webp .room-bg-room5 { background-image: var(--bg-png); }

/* ==============================================
   COMPONENTS
   ==============================================
   Centralized CSS for specific UI components like the universal header.
*/

/* ===== UNIVERSAL PAGE HEADER ===== */
/* Consistent header with fade effect used across all pages except rooms 1-5 */

.site-header.universal-page-header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    background: var(--gradient-header);
    color: var(--brand-primary);
    transition: all 0.3s ease-in-out;
    --header-height: 80px; /* Default height for padding calculations */
}

.site-header.universal-page-header .header-container {
    width: 100%;
    padding: 0;
    margin: 0;
}

.site-header.universal-page-header .header-content {
    display: grid;
    grid-template-columns: auto 1fr auto;
    align-items: center;
    width: 100%;
    min-height: var(--header-height);
    padding: 0;
}

/* Left Section: Logo and Navigation */
.site-header.universal-page-header .header-left {
    display: flex;
    align-items: center;
    gap: 30px;
    justify-self: start;
    padding-left: 20px;
}

.site-header.universal-page-header .logo-link {
    display: flex;
    align-items: center;
    gap: 12px;
    text-decoration: none;
    color: var(--brand-primary);
    transition: opacity 0.3s ease;
}

.site-header.universal-page-header .logo-link:hover {
    opacity: 0.9;
}

.site-header.universal-page-header .header-logo {
    width: 40px;
    height: 40px;
    object-fit: contain;
}

.site-header.universal-page-header .logo-text-container {
    display: flex;
    flex-direction: column;
}

.site-header.universal-page-header .logo-text {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--brand-primary);
    line-height: 1.2;
}

.site-header.universal-page-header .logo-tagline {
    font-size: 0.875rem;
    color: var(--brand-primary);
    font-weight: 400;
}

/* Navigation Links (Left-justified) */
.site-header.universal-page-header .nav-links {
    display: flex;
    align-items: center;
    gap: 25px;
}

.site-header.universal-page-header .nav-link {
    color: var(--brand-primary);
    text-decoration: none;
    font-weight: 500;
    font-size: 1rem;
    padding: 8px 12px;
    border-radius: 6px;
    transition: all 0.3s ease;
}

.site-header.universal-page-header .nav-link:hover {
    background: rgba(255, 255, 255, 0.15);
    transform: translateY(-1px);
}

.site-header.universal-page-header .nav-link.active {
    background: rgba(255, 255, 255, 0.2);
    font-weight: 600;
}

/* Center Section: Search (Centered) */
