/* ==============================================
   ROOM MAIN PAGE CSS - RECOVERED FROM BACKUPS
   ============================================== */

/* Fullscreen main room with proper z-index hierarchy */
.main-room-section {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background-color: transparent;
    background-image: none;
    background-size: cover;
    background-position: center center;
    background-repeat: no-repeat;
    z-index: var(--z-base); /* Lower than header z-index (2800) */
    overflow: hidden;
}

/* Header overlay gradient - dark fade at top, transparent at bottom */
.main-room-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 120px; /* Gradient height */
    background: linear-gradient(to bottom, rgb(0 0 0 / 70%) 0%, rgb(0 0 0 / 40%) 50%, transparent 100%);
    z-index: var(--z-base); /* Lower than header z-index (2800) */
    pointer-events: none; /* Allow clicks through to doors */
}

