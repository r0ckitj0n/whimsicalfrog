/* Room Modal Styles - WhimsicalFrog */

/* Updated to use centralized z-index system and fix styling issues */

/* Hide legacy modal elements when room modal is active */
body.modal-open #productModal,
body.modal-open #productModal .modal-content,
body.modal-open #productModal #modalContent,
body.modal-open .modal:not(.room-modal-overlay, #detailedItemModal),
body.modal-open .modal-content:not(.room-modal-container),
body.modal-open .modal-overlay:not(.room-modal-overlay, #detailedItemModal),
body.modal-open #quantityModal {
    display: none;
    visibility: hidden;
    opacity: 0;
    pointer-events: none;
    transform: scale(0); /* Additional hiding */
}

/* Hide detailed item modal ONLY when room modal is active, not when the detailed modal itself is open */
body.modal-open:has(.room-modal-overlay.show) #detailedItemModal {
    display: none;
    visibility: hidden;
    opacity: 0;
    pointer-events: none;
    transform: scale(0); /* Additional hiding */
}

/* Fallback for browsers that don't support :has() - use a specific class for room modal state */
body.room-modal-open #detailedItemModal {
    display: none;
    visibility: hidden;
    opacity: 0;
    pointer-events: none;
    transform: scale(0); /* Additional hiding */
}

/* Allow item popup to work within room modal - it has its own z-index management */
body.modal-open #itemPopup.in-room-modal {
    display: block;
    visibility: visible;
    opacity: 1;
    pointer-events: auto;
    transform: scale(1);
}

/* Allow item popup to work within detailed item modal - ensure it's visible */
body.modal-open #itemPopup.show,
body.modal-open #itemPopup.visible {
    display: block;
    visibility: visible;
    opacity: 1;
    pointer-events: auto;
    transform: scale(1);
}

/* Room Modal Overlay */
/* When a product popup is active, hide the dimming layer so only the popup is visible */
.room-modal-overlay.popup-active {
    background-image: none !important;
    background: transparent !important;
}
.room-modal-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background-image: linear-gradient(rgb(0 0 0 / 40%), rgb(0 0 0 / 40%)), var(--dynamic-bg-url);
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;

    display: none;
    align-items: center;
    justify-content: center;
    padding: 20px;
    padding-top: 90px;
    padding-bottom: 40px; /* Add extra bottom padding so modal doesn't touch screen edge */
    overflow: hidden;
    pointer-events: auto;
    opacity: 0;
    transition: opacity 0.3s ease;
    box-sizing: border-box;
}

.room-modal-overlay.show {
    display: flex;
    opacity: 1;
}

/* Room Modal Container - Fixed aspect ratio to match room images (1280:896 = 1.43:1) */
.room-modal-container {
    position: relative;
    background: rgb(255 255 255 / 5%);
    border-radius: var(--room-modal-border-radius, 32px);
    box-shadow: 0 25px 50px rgb(0 0 0 / 40%);
    backdrop-filter: blur(20px);
    border: 2px solid rgb(255 255 255 / 10%);
    overflow: hidden;
    
    /* Enforce aspect ratio for modal container */
    aspect-ratio: 1280 / 896;
    width: min(95vw, min(95vh * 1.43, 1280px));
    height: auto;
    
    /* Fallback for browsers without aspect-ratio support */
    max-width: 1280px;
    max-height: 896px;
    
    /* Ensure proper scaling */
    transform: none; /* Disable initial scaling */
    margin-bottom: 20px;
    transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
}

/* Show state with proper scaling */
.room-modal-overlay.show .room-modal-container {
    transform: scale(1);
}

/* Room Modal Frame - Fill container exactly */
.room-modal-frame,
.room-modal-iframe {
    width: 100%;
    height: 100%;
    border: none;
    border-radius: var(--room-modal-border-radius, 32px);
    background: transparent;
    position: absolute;
    top: 0;
    left: 0;
    overflow: hidden;
    display: block;
}

/* Room Modal Header - Use centralized z-index */
.room-modal-header {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    width: 100%;
    max-width: 100%;
    box-sizing: border-box;
    pointer-events: none;
