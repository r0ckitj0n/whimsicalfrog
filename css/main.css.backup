.room-page-header {
    background: rgb(0 0 0 / 70%); /* Ensure header has background for visibility */
    backdrop-filter: blur(5px);
}

.room-page-header * {
    color: var(--brand-primary); /* Ensure all text is visible */
    text-shadow: 1px 1px 2px rgb(0 0 0 / 80%); /* Add text shadow for contrast */
}

