/* ==============================================
   CONFIRMATION MODAL SYSTEM
   ============================================== */

/* Confirmation Modal Overlay */
.confirmation-modal-overlay {
    position: fixed;
    inset: 0;
    background: rgb(0 0 0 / 50%);
    backdrop-filter: blur(4px);
    display: flex;
    align-items: center;
    justify-content: center;
