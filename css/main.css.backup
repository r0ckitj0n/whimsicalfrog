/* ==============================================
   DOOR INTERACTION STATES
   ============================================== */

/* Door Interaction States */
.door-area.touch-active {
    transform: scale(1.02);
    transition: transform 0.2s ease;
}

.door-area.touch-inactive {
    transform: scale(1);
    transition: transform 0.2s ease;
}

