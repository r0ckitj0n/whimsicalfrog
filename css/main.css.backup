} /* ==============================================
   NOTIFICATION SYSTEM CSS
   ============================================== */

/* Notification Container */
.wf-notification-container {
    position: fixed;
    top: 24px;
    right: 24px;

    pointer-events: none;
    max-width: 420px;
    width: 100%;
}

/* Notification Base */
.wf-notification {
    background: white;
    border: 2px solid;
    border-radius: 16px;
    padding: 20px 24px;
    margin-bottom: 16px;
    box-shadow: 0 12px 28px rgb(0 0 0 / 35%), 0 4px 8px rgb(0 0 0 / 15%);
    backdrop-filter: blur(12px) saturate(180%);
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    font-size: 15px;
    font-weight: 500;
    line-height: 1.5;
    opacity: 0;
    transform: translateX(100%) scale(0.9);
    transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    pointer-events: auto;
    position: relative;
    overflow: hidden;
    cursor: pointer;
}

.wf-notification:hover {
    transform: translateX(0) scale(1.02);
}

/* Notification Types */
.wf-success-notification {
    background: var(--brand-primary, #87ac3a);
    border-color: #6b8e23;
    color: white;
    box-shadow: 0 12px 28px rgb(135 172 58 / 35%), 0 4px 8px rgb(135 172 58 / 15%);
}

.wf-error-notification {
    background: linear-gradient(135deg, #fee2e2, #fecaca);
    border-color: #ef4444;
    color: #7f1d1d;
    box-shadow: 0 12px 28px rgb(239 68 68 / 35%), 0 4px 8px rgb(239 68 68 / 15%);
}

.wf-warning-notification {
    background: linear-gradient(135deg, #fef3c7, #fde68a);
    border-color: #f59e0b;
    color: #92400e;
    box-shadow: 0 12px 28px rgb(245 158 11 / 35%), 0 4px 8px rgb(245 158 11 / 15%);
}

.wf-info-notification {
    background: linear-gradient(135deg, #dbeafe, #bfdbfe);
    border-color: #3b82f6;
    color: #1e3a8a;
    box-shadow: 0 12px 28px rgb(59 130 246 / 35%), 0 4px 8px rgb(59 130 246 / 15%);
}

.wf-validation-notification {
    background: linear-gradient(135deg, #fef3c7, #fde68a);
    border-color: #f59e0b;
    color: #92400e;
    box-shadow: 0 12px 28px rgb(245 158 11 / 35%), 0 4px 8px rgb(245 158 11 / 15%);
}

/* Notification Content */
.wf-notification-content {
    display: flex;
    align-items: flex-start;
    gap: 12px;
    position: relative;
}

.wf-notification-icon {
    font-size: 24px;
    flex-shrink: 0;
    margin-top: 1px;
}

.wf-notification-body {
    flex: 1;
    min-width: 0;
}

.wf-notification-title {
    font-weight: 600;
    margin-bottom: 6px;
}

.wf-notification-message {
    word-wrap: break-word;
}

.wf-notification-actions {
    margin-top: 12px;
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
}

.wf-notification-action {
    border: 1px solid #87ac3a;
    padding: 6px 12px;
    border-radius: 6px;
    font-size: 12px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s;
}

.wf-notification-action.primary {
    background: #87ac3a;
    color: white;
}

.wf-notification-action.secondary {
    background: transparent;
    color: #87ac3a;
}

.wf-notification-action:hover {
    opacity: 0.8;
}

.wf-notification-close {
    background: none;
    border: none;
    cursor: pointer;
    font-size: 18px;
    padding: 0;
    width: 20px;
    height: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 4px;
    transition: all 0.2s;
    margin-top: 1px;
    flex-shrink: 0;
    opacity: 0.7;
}

.wf-notification-close:hover {
    opacity: 1;
    background-color: rgb(255 255 255 / 20%);
}

/* Pulse animation for warning/error */
@keyframes pulse {
    0% { transform: translateX(0) scale(1); }
    50% { transform: translateX(0) scale(1.02); }
    100% { transform: translateX(0) scale(1); }
}

.pulse {
    animation: pulse 0.3s ease-in-out;
}

/* Remove old border-left styles as we're using full borders now */
.wf-notification-info,
.wf-notification-success,
.wf-notification-warning,
.wf-notification-error {
    border-left: none;
}

/* Override base background for types */
.wf-notification {
    background: none; /* Let type-specific background take over */
}

/* Animations */
@keyframes slideIn {
    from {
        transform: translateX(100%);
        opacity: 0;
    }

    to {
        transform: translateX(0);
        opacity: 1;
    }
}

@keyframes slideOut {
    from {
        transform: translateX(0);
        opacity: 1;
    }

    to {
        transform: translateX(100%);
        opacity: 0;
    }
}

/* Slide out animation class */
.wf-notification.slide-out {
    animation: slideOut 0.3s ease-in-out forwards;
}

/* Responsive Design */
@media (width <= 768px) {
    .wf-notification-container {
        top: 10px;
        right: 10px;
        left: 10px;
        max-width: none;
    }
    
    .wf-notification {
        margin-bottom: 8px;
        padding: 12px;
        font-size: 13px;
    }
}

@media (width <= 480px) {
    .wf-notification-container {
        top: 5px;
        right: 5px;
        left: 5px;
    }
    
    .wf-notification {
        padding: 10px;
        font-size: 12px;
    }
