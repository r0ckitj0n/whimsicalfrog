/* Custom shipping address box */
.email-shipping-box {
    background-color: #e1f5fe;
    padding: 15px;
    border-radius: 6px;
    margin: 20px 0;
    border-left: 4px solid #0288d1;
}

/* Secondary call-to-action button */
.email-secondary-cta {
    display: inline-block;
