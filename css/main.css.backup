/*==============================================
   MODAL OVERLAY SYSTEM - Base Classes
   ============================================== */
/* --- chunk: chunk-2.css --- */

/*Standard Modal Overlay */
.modal-overlay {
    position: fixed;
    inset: 0;
    background: rgb(0 0 0 / 50%);
    backdrop-filter: blur(4px);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 1;
    visibility: visible;
    transition: all 0.3s ease;
    padding: 20px;
    box-sizing: border-box;
}

.modal-overlay.hidden {
    opacity: 0;
    visibility: hidden;
    pointer-events: none;
}
/* --- chunk: chunk-3.css --- */

/*Admin Modal Overlay (for larger admin modals) */
.admin-modal-overlay {
    position: fixed;
    inset: 0;
    background: rgb(0 0 0 / 60%);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 1rem;
    opacity: 1;
    visibility: visible;
    transition: all 0.3s ease;
}

.admin-modal-overlay.hidden {
    opacity: 0;
    visibility: hidden;
    pointer-events: none;
}
/* --- chunk: chunk-4.css --- */

/*Full Screen Modal Overlay (for settings modals) */
.fullscreen-modal-overlay {
    position: fixed;
    inset: 0;
    background: rgb(0 0 0 / 50%);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 1;
    visibility: visible;
    transition: all 0.3s ease;
}

.fullscreen-modal-overlay.hidden {
    opacity: 0;
    visibility: hidden;
    pointer-events: none;
}
/* --- chunk: chunk-5.css --- */

