 /* ==============================================
   FORM SYSTEM CSS
   ============================================== */

/* Form CSS Variables - managed by Global CSS Rules */

/* Form Container */
.form {
    width: 100%;
    max-width: 100%;
}

.form-container {
    max-width: 600px;
    margin: 0 auto;
    padding: 1.5rem;
}

/* Form Groups */
.form-group {
    margin-bottom: 1.5rem;
    position: relative;
}

.form-group:last-child {
    margin-bottom: 0;
}

.form-row {
    display: flex;
    gap: 1rem;
    margin-bottom: 1.5rem;
}

.form-col {
    flex: 1;
}

.form-col-auto {
    flex: none;
}

/* Labels */
.form-label {
    display: block;
    color: var(--form-label-color);
    font-weight: var(--form-label-font-weight);
    font-size: 0.875rem;
    line-height: 1.5;
    margin-bottom: 0.5rem;
    cursor: pointer;
}

.form-label.required::after {
    content: ' *';
    color: var(--form-error-color);
    font-weight: 600;
}

.form-label-inline {
    display: inline-flex;
    align-items: center;
    margin-bottom: 0;
    margin-left: 0.5rem;
    cursor: pointer;
}

/* Input Fields */
.form-input {
    display: block;
    width: 100%;
    background-color: var(--form-input-bg);
    border: var(--form-input-border);
    color: var(--form-input-color);
    padding: var(--form-input-padding);
    border-radius: var(--form-input-border-radius);
    font-size: 0.875rem;
    line-height: 1.5;
    transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    appearance: none;
}

.form-input:focus {
    border: var(--form-input-border-focus);
    outline: none;
    box-shadow: 0 0 0 3px rgb(135 172 58 / 10%);
}

.form-input::placeholder {
    color: var(--form-input-placeholder);
    opacity: 1;
}

.form-input:disabled {
    background-color: #f9fafb;
    border-color: #e5e7eb;
    color: #9ca3af;
    cursor: not-allowed;
}

.form-input:readonly {
    background-color: #f9fafb;
    border-color: #e5e7eb;
}

/* Input Sizes */
.form-input-sm {
    padding: 0.375rem 0.5rem;
    font-size: 0.8125rem;
    border-radius: 0.25rem;
}

.form-input-lg {
    padding: 0.75rem 1rem;
    font-size: 1rem;
    border-radius: 0.5rem;
}

/* Textarea */
.form-textarea {
    min-height: 6rem;
    resize: vertical;
}

.form-textarea-sm {
    min-height: 4rem;
}

.form-textarea-lg {
    min-height: 8rem;
}

/* Select Dropdown */
.form-select {
    display: block;
    width: 100%;
    background-color: var(--form-select-bg);
    border: var(--form-input-border);
    color: var(--form-input-color);
    padding: var(--form-input-padding);
    border-radius: var(--form-input-border-radius);
    font-size: 0.875rem;
    line-height: 1.5;
    background-image: var(--form-select-arrow);
    background-repeat: no-repeat;
    background-position: right 0.75rem center;
    background-size: 12px 8px;
    padding-right: 2.5rem;
    appearance: none;
    cursor: pointer;
    transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
}

.form-select:focus {
    border: var(--form-input-border-focus);
    outline: none;
    box-shadow: 0 0 0 3px rgb(135 172 58 / 10%);
}

.form-select:disabled {
    background-color: #f9fafb;
    border-color: #e5e7eb;
    color: #9ca3af;
    cursor: not-allowed;
}

.form-select[multiple] {
    background-image: none;
    padding-right: 0.75rem;
    height: auto;
}

/* Checkbox and Radio */
.form-check {
    display: flex;
    align-items: flex-start;
    margin-bottom: 0.75rem;
}

.form-check-input {
    width: 1rem;
    height: 1rem;
    margin-top: 0.25rem;
    margin-right: 0.5rem;
    background-color: var(--form-input-bg);
    border: var(--form-input-border);
    border-radius: 0.25rem;
    cursor: pointer;
    transition: all 0.15s ease-in-out;
    flex-shrink: 0;
}

.form-check-input:checked {
    background-color: var(--brand-primary);
    border-color: var(--brand-primary);
    background-image: url("data:image/svg+xml,%3csvg viewBox='0 0 16 16' fill='white' xmlns='http://www.w3.org/2000/svg'%3e%3cpath d='m13.854 3.646-7.5 7.5a.5.5 0 0 1-.708 0l-3.5-3.5a.5.5 0 1 1 .708-.708L6 10.293l7.146-7.147a.5.5 0 0 1 .708.708z'/%3e%3c/svg%3e");
    background-size: 0.75rem;
    background-position: center;
    background-repeat: no-repeat;
}

.form-check-input:focus {
    border-color: #87ac3a;
    box-shadow: 0 0 0 3px rgb(135 172 58 / 10%);
}

.form-check-input[type="radio"] {
    border-radius: 50%;
}

.form-check-input[type="radio"]:checked {
    background-image: url("data:image/svg+xml,%3csvg viewBox='0 0 16 16' fill='white' xmlns='http://www.w3.org/2000/svg'%3e%3ccircle cx='8' cy='8' r='3'/%3e%3c/svg%3e");
}

.form-check-label {
    color: var(--form-label-color);
    font-size: 0.875rem;
    line-height: 1.5;
    cursor: pointer;
}

/* Switch Toggle */
.form-switch {
    position: relative;
    display: inline-block;
    width: 3rem;
    height: 1.5rem;
}

.form-switch-input {
    opacity: 0;
    width: 0;
    height: 0;
}

.form-switch-slider {
    position: absolute;
    cursor: pointer;
    inset: 0;
    background-color: #d1d5db;
    transition: 0.3s;
    border-radius: 1rem;
}

.form-switch-slider::before {
    position: absolute;
    content: "";
    height: 1.125rem;
    width: 1.125rem;
    left: 0.1875rem;
    bottom: 0.1875rem;
    background-color: white;
    transition: 0.3s;
    border-radius: 50%;
    box-shadow: 0 1px 3px rgb(0 0 0 / 10%);
}

.form-switch-input:checked + .form-switch-slider {
    background-color: var(--brand-primary);
}

.form-switch-input:checked + .form-switch-slider::before {
    transform: translateX(1.5rem);
}

.form-switch-input:focus + .form-switch-slider {
    box-shadow: 0 0 0 3px rgb(135 172 58 / 10%);
}

/* File Input */
.form-file {
    position: relative;
    display: inline-block;
    width: 100%;
}

.form-file-input {
    position: absolute;
    opacity: 0;
    width: 100%;
    height: 100%;
    cursor: pointer;
}

.form-file-label {
    display: block;
    width: 100%;
    padding: var(--form-input-padding);
    background-color: var(--form-input-bg);
    border: var(--form-input-border);
    border-radius: var(--form-input-border-radius);
    color: var(--form-input-placeholder);
    cursor: pointer;
    transition: border-color 0.15s ease-in-out;
    text-align: center;
}

.form-file-label:hover {
    border-color: var(--brand-primary);
}

.form-file-label.has-file {
    color: var(--form-input-color);
    background-color: #f0f9ff;
    border-color: var(--brand-primary);
}

/* Input Groups */
.input-group {
    position: relative;
    display: flex;
    flex-wrap: wrap;
    align-items: stretch;
    width: 100%;
}

.input-group .form-input {
    position: relative;
    flex: 1 1 auto;
    width: 1%;
    min-width: 0;
}

.input-group-prepend,
.input-group-append {
    display: flex;
}

.input-group-text {
    display: flex;
    align-items: center;
    padding: var(--form-input-padding);
    margin-bottom: 0;
    font-size: 0.875rem;
    font-weight: 400;
    line-height: 1.5;
    color: #6b7280;
    text-align: center;
    white-space: nowrap;
    background-color: #f9fafb;
    border: var(--form-input-border);
}

.input-group-prepend .input-group-text {
    border-top-right-radius: 0;
    border-bottom-right-radius: 0;
    border-right: 0;
}

.input-group-append .input-group-text {
    border-top-left-radius: 0;
    border-bottom-left-radius: 0;
    border-left: 0;
}

.input-group-prepend + .form-input {
    border-top-left-radius: 0;
    border-bottom-left-radius: 0;
}

.input-group .form-input + .input-group-append .input-group-text {
    border-top-left-radius: 0;
    border-bottom-left-radius: 0;
}

/* Floating Labels */
.form-floating {
    position: relative;
}

.form-floating .form-input {
    height: calc(3.5rem + 2px);
    padding: 1rem 0.75rem 0.25rem;
}

.form-floating .form-label {
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    padding: 1rem 0.75rem;
    pointer-events: none;
    border: 1px solid transparent;
    transform-origin: 0 0;
    transition: opacity 0.1s ease-in-out, transform 0.1s ease-in-out;
    margin-bottom: 0;
    line-height: 1.5;
    color: var(--form-input-placeholder);
}

.form-floating .form-input:focus ~ .form-label,
.form-floating .form-input:not(:placeholder-shown) ~ .form-label {
    opacity: 0.65;
    transform: scale(0.85) translateY(-0.5rem) translateX(0.15rem);
    color: var(--form-label-color);
}

/* Validation States */
.form-input.is-valid {
    border-color: var(--form-success-color);
}

.form-input.is-valid:focus {
    border-color: var(--form-success-color);
    box-shadow: 0 0 0 3px rgb(5 150 105 / 10%);
}

.form-input.is-invalid {
    border-color: var(--form-error-color);
}

.form-input.is-invalid:focus {
    border-color: var(--form-error-color);
    box-shadow: 0 0 0 3px rgb(220 38 38 / 10%);
}

.field-error-highlight {
    border-color: var(--form-error-color);
    box-shadow: 0 0 0 3px rgb(220 38 38 / 10%);
}

/* Feedback Messages */
.form-feedback {
    display: block;
    width: 100%;
    margin-top: 0.25rem;
    font-size: 0.8125rem;
    line-height: 1.4;
}

.form-feedback.valid-feedback {
    color: var(--form-success-color);
}

.form-feedback.invalid-feedback {
    color: var(--form-error-color);
}

.form-error {
    color: var(--form-error-color);
    font-size: 0.8125rem;
    margin-top: 0.25rem;
    display: block;
}

.form-success {
    color: var(--form-success-color);
    font-size: 0.8125rem;
    margin-top: 0.25rem;
    display: block;
}

/* Help Text */
.form-help {
    margin-top: 0.25rem;
    font-size: 0.8125rem;
    color: #6b7280;
    line-height: 1.4;
}

/* Form Grid */
.form-grid {
    display: grid;
    gap: 1rem;
}

.form-grid-2 {
    grid-template-columns: repeat(2, 1fr);
}

.form-grid-3 {
    grid-template-columns: repeat(3, 1fr);
}

.form-grid-4 {
    grid-template-columns: repeat(4, 1fr);
}

/* Mobile styles moved to css/responsive/mobile.css */

/* Accessibility */
@media (prefers-reduced-motion: reduce) {
    .form-input,
    .form-select,
    .form-switch-slider,
    .form-floating .form-label {
        transition: none;
    }
}

/* High Contrast Mode */
@media (prefers-contrast: high) {
    .form-input,
    .form-select {
        border-width: 2px;
    }
    
    .form-check-input {
        border-width: 2px;
    }
}

/* Print Styles */
@media print {
    .form-input,
    .form-select,
    .form-textarea {
        border: 1px solid #000;
        background: transparent;
    }
    
    .form-switch,
    .form-file {
        display: none;
    }
} /* WhimsicalFrog Form Error Styles - Static CSS */

/* Form Error Display Classes */
.form-errors-visible {
    display: block;
}

.form-errors-hidden {
    display: none;
}

/* Error Message Styling */
.error-message {
    color: #dc2626;
    background: #fef2f2;
    border: 1px solid #fecaca;
    padding: 0.5rem 0.75rem;
    border-radius: 0.375rem;
    margin-bottom: 0.5rem;
    font-size: 0.875rem;
    line-height: 1.25;
}

/* Success Message Styling */
.success-message {
    color: #059669;
    background: #ecfdf5;
    border: 1px solid #a7f3d0;
    padding: 0.5rem 0.75rem;
    border-radius: 0.375rem;
    margin-bottom: 0.5rem;
    font-size: 0.875rem;
    line-height: 1.25;
}

/* Warning Message Styling */
.warning-message {
    color: #d97706;
    background: #fffbeb;
    border: 1px solid #fed7aa;
    padding: 0.5rem 0.75rem;
    border-radius: 0.375rem;
    margin-bottom: 0.5rem;
    font-size: 0.875rem;
    line-height: 1.25;
}

/* Form Field Error State */
.form-field-error {
    border-color: #dc2626;
    box-shadow: 0 0 0 3px rgb(220 38 38 / 10%);
}

/* Form Field Success State */
.form-field-success {
    border-color: #059669;
    box-shadow: 0 0 0 3px rgb(5 150 105 / 10%);
