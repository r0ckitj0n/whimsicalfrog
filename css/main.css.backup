.badge-style-2::after {
    content: '';
    position: absolute;
    top: -3px;
    right: -3px;
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: linear-gradient(45deg, #fbbf24, #f59e0b);
    box-shadow: 0 0 8px rgb(251 191 36 / 60%);
}

.badge-style-2::before {
    content: '';
    position: absolute;
    bottom: -3px;
    left: -3px;
    width: 4px;
    height: 4px;
    border-radius: 50%;
    background: linear-gradient(45deg, #10b981, #059669);
    box-shadow: 0 0 6px rgb(16 185 129 / 60%);
}

