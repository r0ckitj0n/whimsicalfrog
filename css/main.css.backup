/* CRITICAL MISSING ROOM MODAL CSS - Extracted from legacy_bigfiles/css/room-modal.css */
/* This contains essential room modal functionality with z-index management and modal state handling */

/* ==============================================
   ROOM MODAL STATE MANAGEMENT
   ============================================== */

/* Hide legacy modal elements when room modal is active */
body.modal-open #productModal,
body.modal-open #productModal .modal-content,
body.modal-open #productModal #modalContent,
body.modal-open .modal:not(.room-modal-overlay, #detailedItemModal),
body.modal-open .modal-content:not(.room-modal-container),
body.modal-open .modal-overlay:not(.room-modal-overlay, #detailedItemModal),
body.modal-open #quantityModal {
    display: none;
    visibility: hidden;
    opacity: 0;
    pointer-events: none;
    z-index: var(--z-index-behind);
    transform: scale(0); /* Additional hiding */
}

/* Hide detailed item modal ONLY when room modal is active, not when the detailed modal itself is open */
body.modal-open:has(.room-modal-overlay.show) #detailedItemModal {
    display: none;
    visibility: hidden;
    opacity: 0;
    pointer-events: none;
    z-index: var(--z-index-behind);
    transform: scale(0); /* Additional hiding */
}

/* Fallback for browsers that don't support :has() - use a specific class for room modal state */
body.room-modal-open #detailedItemModal {
    display: none;
    visibility: hidden;
    opacity: 0;
    pointer-events: none;
    z-index: var(--z-index-behind);
    transform: scale(0); /* Additional hiding */
}

/* Allow item popup to work within room modal - it has its own z-index management */
body.modal-open #itemPopup.in-room-modal {
    display: block;
    visibility: visible;
    opacity: 1;
    pointer-events: auto;
    z-index: var(--z-index-god-mode);
    transform: scale(1);
}

/* ==============================================
   ROOM MODAL CONTAINER SYSTEM
   ============================================== */

.room-modal-overlay {
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.8);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: var(--z-index-modal);
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
}

.room-modal-overlay.show {
    opacity: 1;
    visibility: visible;
}

.room-modal-container {
    position: relative;
    width: min(95vw, min(95vh * 1.43, 1200px));
    aspect-ratio: 1280 / 896;
    background: white;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 20px 25px -5px rgb(0 0 0 / 10%), 0 10px 10px -5px rgb(0 0 0 / 4%);
    transform: scale(0.95);
    transition: transform 0.3s ease;
}

.room-modal-overlay.show .room-modal-container {
    transform: scale(1);
}

.room-modal-iframe {
    width: 100%;
    height: 100%;
    border: none;
    border-radius: 12px;
    background: #f8fafc;
}

/* ==============================================
   ROOM MODAL CONTROLS
   ============================================== */

.room-modal-close {
    position: absolute;
    top: 1rem;
    right: 1rem;
    width: 40px;
    height: 40px;
    background: rgba(0, 0, 0, 0.7);
    color: white;
    border: none;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 20px;
    z-index: var(--z-index-overlay);
    transition: all 0.2s ease;
}

.room-modal-close:hover {
    background: rgba(0, 0, 0, 0.9);
    transform: scale(1.1);
}

.room-title-overlay {
    position: absolute;
    top: 1rem;
    left: 1rem;
    max-width: 300px;
    background: rgba(0, 0, 0, 0.8);
    color: white;
    padding: 0.75rem 1rem;
    border-radius: 8px;
    z-index: var(--z-index-overlay);
    backdrop-filter: blur(4px);
}

.room-title-overlay h2 {
    margin: 0;
    font-size: 1.25rem;
    font-weight: 600;
}

.room-title-overlay p {
    margin: 0.25rem 0 0 0;
    font-size: 0.875rem;
    opacity: 0.9;
}

/* ==============================================
   ROOM MODAL NAVIGATION
   ============================================== */

.room-modal-nav {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 50px;
    height: 50px;
    background: rgba(0, 0, 0, 0.7);
    color: white;
    border: none;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 20px;
    z-index: var(--z-index-overlay);
    transition: all 0.2s ease;
}

.room-modal-nav:hover {
    background: rgba(0, 0, 0, 0.9);
    transform: translateY(-50%) scale(1.1);
}

.room-modal-nav.prev {
    left: 1rem;
}

.room-modal-nav.next {
    right: 1rem;
}

.room-modal-nav:disabled {
    opacity: 0.5;
    cursor: not-allowed;
}

.room-modal-nav:disabled:hover {
    background: rgba(0, 0, 0, 0.7);
    transform: translateY(-50%) scale(1);
}

/* ==============================================
   ROOM MODAL LOADING STATES
   ============================================== */

.room-modal-loading {
    position: absolute;
    inset: 0;
    background: #f8fafc;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 12px;
    z-index: var(--z-index-content);
}

.room-modal-spinner {
    width: 50px;
    height: 50px;
    border: 4px solid #e5e7eb;
    border-top: 4px solid var(--brand-primary, #87ac3a);
    border-radius: 50%;
    animation: room-modal-spin 1s linear infinite;
}

@keyframes room-modal-spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}

.room-modal-loading-text {
    margin-top: 1rem;
    color: #6b7280;
    font-size: 0.875rem;
}

/* ==============================================
   ROOM MODAL ERROR STATES
   ============================================== */

.room-modal-error {
    position: absolute;
    inset: 0;
    background: #f8fafc;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    border-radius: 12px;
    z-index: var(--z-index-content);
    padding: 2rem;
    text-align: center;
}

.room-modal-error-icon {
    width: 64px;
    height: 64px;
    background: #fee2e2;
    color: #dc2626;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2rem;
    margin-bottom: 1rem;
}

.room-modal-error-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: #1f2937;
    margin-bottom: 0.5rem;
}

.room-modal-error-message {
    color: #6b7280;
    margin-bottom: 1.5rem;
    line-height: 1.5;
}

.room-modal-error-retry {
    background: var(--brand-primary, #87ac3a);
    color: white;
    border: none;
    padding: 0.75rem 1.5rem;
    border-radius: 8px;
    cursor: pointer;
    font-weight: 500;
    transition: all 0.2s ease;
}

.room-modal-error-retry:hover {
    background: #6b8e23;
    transform: translateY(-1px);
}

/* ==============================================
   ROOM MODAL RESPONSIVE DESIGN
   ============================================== */

@media (max-width: 768px) {
    .room-modal-container {
        width: min(98vw, min(98vh * 1.43, 800px));
        aspect-ratio: 1280 / 896;
    }
    
    .room-modal-close {
        width: 36px;
        height: 36px;
        font-size: 18px;
    }
    
    .room-modal-nav {
        width: 44px;
        height: 44px;
        font-size: 18px;
    }
    
    .room-title-overlay {
        max-width: 250px;
