    box-shadow: 0 20px 40px rgb(0 0 0 / 30%);
}

.popup-close {
    position: absolute;
    top: 12px;
    right: 12px;
    background: none;
    border: none;
    font-size: 24px;
    cursor: pointer;
    color: #666;
    line-height: 1;
    padding: 4px;
}

.popup-close:hover {
    color: #000;
