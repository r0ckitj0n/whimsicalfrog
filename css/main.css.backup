/* CRITICAL MISSING ROOM POPUPS CSS - Extracted from legacy_bigfiles/css/room-popups.css */
/* This contains comprehensive room popup functionality with database-driven styling */

:root {
    /* Popup Variables - Database-driven customizable values */
    --popup-bg-color: #fff;
    --popup-border-color: #8B4513;
    --popup-border-width: 3px;
    --popup-border-radius: 15px;
    --popup-shadow: 0 8px 25px rgb(0 0 0 / 30%);
    --popup-padding: 15px;
    --popup-min-width: 280px;
    --popup-max-width: 450px;
    /* Popup should appear above room modal overlay (z-index ~2400) */
    --popup-z-index: 2600;
    
    /* Popup Text Variables */
    --popup-title-color: #556B2F;
    --popup-title-size: 16px;
    --popup-title-weight: bold;
    --popup-category-color: #6B8E23;
    --popup-category-size: 12px;
    --popup-description-color: #666;
    --popup-description-size: 12px;
    --popup-price-color: #6B8E23;
    --popup-price-size: 18px;
    
    /* Enhanced Popup Variables */
    --popup-enhanced-bg-color: #fff;
    --popup-enhanced-border-radius: 20px;
    --popup-enhanced-shadow: 0 12px 40px rgb(0 0 0 / 40%);
    --popup-enhanced-min-width: 400px;
    --popup-enhanced-max-width: 600px;
    --popup-enhanced-padding: 20px;
    
    /* Button Variables */
    --button-bg-primary: #87ac3a;
    --button-bg-primary-hover: #a3cc4a;
    --button-text-primary: #fff;
    --button-border-radius: 8px;
}

/* ==============================================
   ROOM POPUP SYSTEM - Core Classes
   ============================================== */

/* Ensure popups always appear above any modal overlay */
.item-popup,
.item-popup-legacy,
.item-popup-enhanced {
    z-index: var(--popup-z-index, 2600);
    position: absolute;
    background: var(--popup-bg-color);
    border: var(--popup-border-width) solid var(--popup-border-color);
    border-radius: var(--popup-border-radius);
    box-shadow: var(--popup-shadow);
    padding: var(--popup-padding);
    min-width: var(--popup-min-width);
    max-width: var(--popup-max-width);
    pointer-events: auto;
    opacity: 1;
    visibility: visible;
    transition: all 0.3s ease;
}

.item-popup.hidden,
.item-popup-legacy.hidden,
.item-popup-enhanced.hidden {
    opacity: 0;
    visibility: hidden;
    pointer-events: none;
    transform: translateY(-10px);
}

/* Enhanced Popup Styling */
.item-popup-enhanced {
    background: var(--popup-enhanced-bg-color);
    border-radius: var(--popup-enhanced-border-radius);
    box-shadow: var(--popup-enhanced-shadow);
    min-width: var(--popup-enhanced-min-width);
    max-width: var(--popup-enhanced-max-width);
    padding: var(--popup-enhanced-padding);
}

/* ==============================================
