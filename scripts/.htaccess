# Deny direct HTTP access to Node/CLI scripts
# These scripts are not meant to be served by the web server.

# Disable directory listing just in case
directoryindex disabled
Options -Indexes

# Apache 2.4+
<IfModule mod_authz_core.c>
  Require all denied
</IfModule>

# Apache 2.2 fallback
<IfModule !mod_authz_core.c>
  Order deny,allow
  Deny from all
</IfModule>
