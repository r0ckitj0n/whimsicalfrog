<script>
(() => {
  const MODAL = 'dashboardConfigModal';
  const TBODY = 'dashboardSectionsBody';
  const STATUS = 'dashboardConfigResult';

  const setStatus=(m,ok)=>{const s=document.getElementById(STATUS);if(!s)return;s.textContent=m||'';s.classList.toggle('text-green-600',!!ok);s.classList.toggle('text-red-600',ok===false);};
  const show=()=>{const el=document.getElementById(MODAL);if(el){el.classList.remove('hidden');el.removeAttribute('aria-hidden');}};
  const api=async(u,p)=>{const r=await fetch(u,{method:p?'POST':'GET',headers:p?{'Content-Type':'application/json'}:{},body:p?JSON.stringify(p):void 0,credentials:'include'});const t=await r.text();let j={};try{j=JSON.parse(t);}catch(_){throw new Error('Non-JSON');}if(!j.success)throw new Error(j.error||'Bad');return j.data||{};};
  const get=()=>api('/api/dashboard_sections.php?action=get_sections');

  const draw=d=>{const tb=document.getElementById(TBODY);if(!tb)return;const avail=d.available_sections||{}, act=Array.isArray(d.sections)?d.sections:[];const ks=new Set(Object.keys(avail));act.forEach(s=>ks.add(s.section_key));const active=new Set(act.map(s=>s.section_key));tb.innerHTML='';Array.from(ks).sort().forEach(k=>{const tr=document.createElement('tr');tr.className='border-b';tr.innerHTML=`<td class="p-2">${(avail[k]&&avail[k].title)||k}</td><td class="p-2"><code>${k}</code></td><td class="p-2"><input type="checkbox" class="dash-active" data-key="${k}" ${active.has(k)?'checked':''}></td>`;tb.appendChild(tr);});};
  const payload=()=>{const xs=[...document.querySelectorAll('#'+TBODY+' .dash-active')].filter(x=>x.checked).map((x,i)=>({section_key:x.dataset.key,display_order:i+1,is_active:1,show_title:1,show_description:1,custom_title:null,custom_description:null,width_class:'half-width'}));return {action:'update_sections',sections:xs};};

  document.addEventListener('click',async e=>{
    const a=e.target.closest('[data-action]');if(!a)return;
    const action=a.dataset.action;

    if(action==='open-dashboard-config'){e.preventDefault();show();setStatus('Loading‚Ä¶',1);try{draw(await get());setStatus('Loaded',1);}catch(_){setStatus('Load failed',0);}}
    if(action==='dashboard-config-refresh'){e.preventDefault();setStatus('Refreshing‚Ä¶',1);try{draw(await get());setStatus('Refreshed',1);}catch(_){setStatus('Refresh failed',0);}}
    if(action==='dashboard-config-reset'){e.preventDefault();setStatus('Resetting‚Ä¶',1);try{await api('/api/dashboard_sections.php?action=reset_defaults');draw(await get());setStatus('Defaults restored',1);}catch(_){setStatus('Reset failed',0);}}
    if(action==='dashboard-config-save'){e.preventDefault();const p=payload();if(!p.sections.length){setStatus('Select at least one',0);return;}setStatus('Saving‚Ä¶',1);try{await api('/api/dashboard_sections.php?action=update_sections',p);setStatus('Saved',1);}catch(_){setStatus('Save failed',0);}}
  });
})();
</script>

